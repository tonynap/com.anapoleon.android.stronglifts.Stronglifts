<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/benchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="@string/bench_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.anapoleon.android.stronglifts.NumberPicker
        android:id="@+id/benchSet1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benchLabel"
        android:layout_centerHorizontal="true"
        vertical="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false" >

    </com.anapoleon.android.stronglifts.NumberPicker>

    <com.anapoleon.android.stronglifts.NumberPicker
        android:id="@+id/benchSet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benchSet1"
        android:layout_centerHorizontal="true"
        vertical="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false" >
    </com.anapoleon.android.stronglifts.NumberPicker>

    <com.anapoleon.android.stronglifts.NumberPicker
        android:id="@+id/benchSet3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benchSet2"
        android:layout_centerHorizontal="true"
        vertical="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false" >

    </com.anapoleon.android.stronglifts.NumberPicker>

    <com.anapoleon.android.stronglifts.NumberPicker
        android:id="@+id/benchSet4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benchSet3"
        android:layout_centerHorizontal="true"
        vertical="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false" >
    </com.anapoleon.android.stronglifts.NumberPicker>

    <com.anapoleon.android.stronglifts.NumberPicker
        android:id="@+id/benchSet5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benchSet4"
        android:layout_centerHorizontal="true"
        vertical="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false" >
    </com.anapoleon.android.stronglifts.NumberPicker>

    <Button
        android:id="@+id/next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benchSet5"
        android:layout_centerHorizontal="true"
        android:text="Next" />

</RelativeLayout>